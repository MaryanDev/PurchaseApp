@section HeadScripts{
    <script src="~/Scripts/pages/dashboard/nav.controller.js"></script>
    <script src="~/Scripts/pages/dashboard/config/route.config.js"></script>
    <script src="~/Scripts/pages/dashboard/purchases/purchaseAjax.service.js"></script>
    <script src="~/Scripts/pages/dashboard/modal/purchaseModal/purchaseModal.controller.js"></script>
    <script src="~/Scripts/pages/dashboard/plannedPurchases/plannedPurchases.controller.js"></script>
